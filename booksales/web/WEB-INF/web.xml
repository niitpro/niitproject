<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.models.User</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.controlller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDao</servlet-name>
        <servlet-class>dao.UserDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDao</servlet-name>
        <servlet-class>dao.OrderDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Order_detail_dao</servlet-name>
        <servlet-class>dao.Order_detail_dao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GioHang</servlet-name>
        <servlet-class>com.controlller.GioHang</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDao</servlet-name>
        <url-pattern>/UserDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderDao</servlet-name>
        <url-pattern>/OrderDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Order_detail_dao</servlet-name>
        <url-pattern>/Order_detail_dao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GioHang</servlet-name>
        <url-pattern>/GioHang</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
